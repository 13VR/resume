<main class='p-5'>
  {{> shopHeader}}
    {{#with formBlock}}
    <div class="row">
        <section class="col-8">
            <h1>{{header}}</h1>
            {{#with rating}}
            <p>{{title}} : {{value}}</p>
            {{/with}}
            {{#with actionBlock}}
                {{> shopNavTabs}}        
            <hr class="my-5">
                <div class="card">
                    {{#with report}}
                    <div class="card-body">
                        <div class="mb-2">{{title}}</div>
                        {{#with button}}
                        <div>
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            {{/with}}
            <hr class="my-5">
            {{#with feedbackBlock}}
                <h1 class="mb-4">{{title}}</h1>
                {{#each buttons}}
                    <a href="{{link}}" class="btn
                        {{#if isWarning}}
                            btn-warning
                            {{else}}
                            {{#if isSuccess}}
                                btn-success  mx-2
                                {{else}}
                                {{#if isDanger}}
                                btn-danger
                                {{/if}}
                            {{/if}}
                        {{/if}}
                    ">{{text}}
                    </a>
                {{/each}}
            {{/with}}        
        </section>
        <section class="col-4">
        {{#with goodsInfo}}
            <div class="card p-2 mb-2">
                <div class="row col-6 ">
                    <img src="{{photo}}" class="mb-2">
                </div>
                <p class="mb-0"><b>{{name}}</b></p>
            </div>
            <div class="card p-2 mb-2">
                <p class="mb-0"><b>{{price}}</b></p>
                {{#if inMarket}}
                    <p class="text-muted">Є в наявності</p>
                {{/if}}
                {{#each buttons}}
                <div>
                    <a href="{{link}}" class="btn
                    {{#if isPrimary}}
                        btn-primary
                        {{else}}
                        {{#if isSecondary}}
                        btn-secondary
                        {{/if}}
                    {{/if}}
                    mb-2">{{text}}
                    </a>
                </div>
                {{/each}}
            </div>
            <div class="card p-2">
                {{#with seller}}
                    <div>
                        <p class="mb-0">{{title}} : <b>{{value}}</b></p>
                    </div>
                {{/with}}
            </div>
        {{/with}}
        </section>
    </div>
    {{/with}}
    <hr class="my-5">
    {{#each reviewList}}
    <div class="card p-3 mb-3">
        <div class="card p-2">
            {{#with title}}
                <div class="cadr">
                    <div class="mb-1"><b>{{userName}}</b></div>
                    <div class="mb-2">{{caption}}</div>
                    <div>{{date}}</div>
                </div>
            {{/with}}
        </div>
        {{#with reviewBody}}
            <div class="card p-2 mb-3">
                {{#with seller}}
                    <div class="mb-3">{{title}} : {{value}}</div>
                {{/with}}
                {{#with rating}}
                    <div class="mb-3">{{title}} : {{value}}</div>
                {{/with}}
                <p>{{text}}</p>
                <div class="mb-3">
                    {{#with advantages}}
                        <div><b>{{title}} :</b></div>
                        <div>{{text}}</div>
                    {{/with}}
                </div>
                <div class="mb-3">
                    {{#with disadvantages}}
                        <div><b>{{title}} :</b></div>
                        <div>{{text}}</div>
                    {{/with}}
                </div>
                <div>
                    {{#each images}}
                        <img src='{{this}}'>
                    {{/each}}
                </div>            
            </div>
            <div >
                {{#each coments}}
                    <ul class="card mx-5 p-3">
                        <div><b>{{userName}}</b></div>
                        <div>{{date}}</div>
                        <div>{{text}}</div>
                    </ul>
                {{/each}}
            </div>
        {{/with}}
    </div>
    {{/each}}
    <div class="mt-5">
        {{> shopService}}
    </div>
  {{> shopFooter}}
</main>