
<main class='p-5'>
  {{> shopHeader}}
    {{#with header}}
    <h2 class="mb-1">{{title}}</h2>
    {{#with button}}
        <div class="my-3 mb-5">
            <button href="{{link}}" class="btn btn-outline-secondary">{{text}}</button>
        </div>
    {{/with}}
    {{/with}}
    <hr class="my-5">
    {{#each goodsBlock}}
        <div class="card px-3 py-2 my-2 ">
            <div class="row col-12">
                <div class=" col-2 pe-0">
                <img src="{{image}}" >
                </div>
                <div class="col-4 py-2">
                    <h6>{{name}}</h6>
                    <div>{{description}}</div>
                </div>
                <div class="col-2 py-2">
                    {{#with price}}
                        <div class="pt-3">{{title}}:</div>
                        <div class="py-2">{{value}}</div>
                    {{/with}}
                </div>
                <div class="col-2 py-5">
                    <div>
                    {{amount}}
                    </div>
                </div> 
                <div class="col-2 py-2">
                    {{#each buttons}}
                    <div>
                        {{#if isPrimary}}
                            <button class="btn btn-primary py-2 my-2">{{text}}</button>
                        {{else}}
                            <button class="btn btn-outline-danger py-2">{{text}}</button> 
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    {{/each}}
     <hr class="my-5">
     <div class="my-3">
        {{#with total}}
            <h2 class="mb-2">{{title}}</h2>
            <div class="display-6 mb-2"><b>{{amount}}</b></div>
            <div class="mb-4">{{delivery}}</div>
            {{#each buttons}}
            <div>               
                <a href="{{link}}" class="btn 
                    {{#if isSuccess}}  
                         btn-success
                         {{else}} 
                        {{#if isOutline}}
                        btn-outline-success
                        {{/if}}
                    {{/if}} my-2">{{text}}</a>                
            </div>
            {{/each}}
        {{/with}}
     </div>
     <hr class="my-5">
    {{#with goodsOtherBlock}}
        <h2 class="mb-2 text-center">{{title}}</h2>
        <div class="row">
            {{#each cards}}
            <div class="col-4">
                <div class="card">                    
                    <img src="{{image}}" class="img-top">
                    <div class="card-body">
                        <div class="card-title">
                            <b>{{title}}</b>
                            {{#if isHot}}
                                <span class="badge rounded-pill text-bg-warning text-uppercase">Hot!</span>
                            {{else}}
                                {{#if idNew}}
                                    <span class="badge rounded-pill text-bg-primary text-uppercase">New</span>
                                {{/if}}
                            {{/if}}
                        </div>
                        <p>{{description}}</p>
                    </div>                    
                </div>
            </div>
            {{/each}}
        </div>
    {{/with}}
    <hr class="my-5">
    <div class="alert text-bg-dark">
        {{#with subscribe}}
            <h2>{{header}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
                <div>
                    <a href="{{link}}" class="btn btn-primary my-2" target="_blank">{{text}}</a>
                </div>
            {{/each}}
        {{/with}}
    </div>


  {{> shopFooter}}
</main>

 