{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main >
    {{#with main}}
        <main>            
            <section>
                {{> title data="Work history" big=true }}                
                <div>
                    <ul>
                       {{#each works}}
                        <li>
                                <div class="mb-3">{{position}}</div>
                                
                                <div class="mb-3">
                                    {{duration.from}} - 
                                    {{#if duration.to}} 
                                        {{duration.to}} 
                                    {{else}} 
                                        (досі працюємо) 
                                    {{/if}}
                                </div>
                                
                                <div class="mb-3">                           
                                
                                    {{#if company.url}}
                                        {{> link href=company.url text=company.name blank=true noLine=true }} 
                                    {{else}}
                                        <b>{{company.name}}</b>
                                    {{/if}}                             
                                
                                </div>
                                
                                <div class="mb-3">
                                    <strong>Projects: ({{projectAmount}})</strong>
                                </div>
                                                        

                                <ul>
                                    {{#each projects }}
                                        <li>                                       
                                        <div class="mb-3"> 
                                            {{> link href=url text=name blank=true noLine=true }} 
                                        </div>                                        
                                        
                                        <div class="mb-3">
                                            <p>{{about}}</p>
                                        </div>
                                        
                                        <div>
                                            <br>
                                            <div class="mb-3">
                                                <em>Project stacks: ({{stackAmount}})</em>
                                            </div>
                                           
                                            <ol>
                                                {{#each stacks}}
                                                    <li>                                                    
                                                        {{name}}                                                
                                                    </li>
                                                {{/each}}                                         
                                            </ol>                                      
                                        </div>
                                        <hr>
                                        <br>                                        
                                        <div class="mb-3">
                                            <em>Project awards:({{awardAmount}})</em>
                                        </div>
                                        
                                        <div>                                        
                                            <ul>
                                                {{#each awards}}
                                                    <li>                                                    
                                                        {{name}}                                                
                                                    </li>
                                                {{/each}}                                         
                                            </ul>  
                                        </div>
                                        <hr>
                                        <br>
                                        </li>
                                    {{/each}}
                                </ul>
                        </li>
                        <br>
                       {{/each}}
                    </ul>
                </div>
            </section>            
        </main>
    {{/with}}
</main>

